@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProductListApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProductListApp.styles.css" asp-append-version="true" />
</head>
<body class="gradient-bacground">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a id="pla-nav-home" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ProductListApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="overflow:hidden;">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a id="pla-nav-products" class="nav-link text-dark" asp-area="" asp-controller="ProductLists" asp-action="Index">@Localizer["Products"]</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav navbar-left flex-grow-1">
                        <li class="align-middle">
                            @await Html.PartialAsync("_SelectLanguage")
                        </li>
                        @if (User.Identity?.IsAuthenticated == false) {
                            <li class="nav-item">
                                <a id="pla-nav-register" class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">@Localizer["Register"]</a>
                            </li>
                            <li class="nav-item">
                                <a id="pla-nav-login" class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">@Localizer["Login"]</a>
                            </li>
                        }
                        else {
                            <li class="nav-item">
                                <a id="pla-nav-logout" class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">@Localizer["Logout"]</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

