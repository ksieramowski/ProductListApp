@model IEnumerable<ProductListApp.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div style="width: 100%">
    <div style="width: 50%; position: fixed; left: 0;">
        <div style="margin: 20px">
            @await Html.PartialAsync("_CreateProduct", new ProductListApp.Models.Product())
        </div>
    </div>

    <div style="width: 50%; position: fixed; right: 0">
        <div style="margin: 20px">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Quantity)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tbody-product-list">
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>







